<html t:type="layout" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd" xmlns:p="tapestry:parameter">
    
    
    <t:form t:id="form">
    <t:errors/>
    
     <tr t:type="ajaxformloop" t:id="phones" source="person.phones" encoder="phoneEncoder" value="phone">
        <!-- t:unless t:test="deleted"-->
    	<t:submitnotifier>
          	<td>              
                <t:select t:id="type" value="phone.type"/><t:textfield t:id="number" value="phone.number"/>
                <t:datefield t:id="date" value="phone.startDate"/>|
                <t:removerowlink>
                    remove
                </t:removerowlink>
            </td>         
    	</t:submitnotifier>
  		<!-- /t:unless-->
  	
	  	<p:addRow>
	    	<td colspan="*" style="text-align: right">
	      	<t:addrowlink>Add phone</t:addrowlink></td>
	  	</p:addRow>
	</tr>
	<input type="submit" value="Save"/>
	</t:form>
    
    
</html>